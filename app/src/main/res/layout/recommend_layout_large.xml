<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/recommend_tv_title4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="111"
        android:textColor="@color/gray"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/recommend_large_iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

       <!-- -->
        <ImageView
            android:src="@drawable/dislikeicon_textpage_night"
            android:id="@+id/recommend_lv_item_large_hot"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            />

        <TextView
            android:id="@+id/recommend_tv_author4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="111"
            android:textColor="@color/gray" />

        <TextView
            android:id="@+id/recommend_tv_comment4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="111"
            android:textColor="@color/gray" />

        <TextView
            android:id="@+id/recommend_tv_date4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="111"
            android:textColor="@color/gray" />

        <ImageView
            android:id="@+id/recommend_iv_add4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           />
    </LinearLayout>
</LinearLayout>
